<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skripsi.mrizk.findingdosen.main.PosisiDosenActivity">

    <include
        android:id="@+id/posisiDosen_toolbar"
        layout="@layout/view_toolbar"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/posisiDosen_profilDosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/posisiDosen_toolbar"
        android:layout_margin="10dp"
        app:cardCornerRadius="2dp"
        >
        <RelativeLayout
            android:id="@+id/posisiDosen_relativeLayoutProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/posisiDosen_textCardProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Profil Dosen"
                android:layout_marginBottom="5dp"
                android:textColor="@color/primary"/>
            <TextView
                android:id="@+id/posisiDosen_textNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textCardProfil"
                android:text="Nama : "
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/posisiDosen_namaDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textCardProfil"
                android:layout_toRightOf="@id/posisiDosen_textNama"
                android:text="Nama Dosen"
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/posisiDosen_textNIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textNama"
                android:text="NIP : "
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/posisiDosen_nipDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textNama"
                android:layout_toRightOf="@id/posisiDosen_textNIP"
                android:text="1234567890"
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/posisiDosen_textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textNIP"
                android:text="Status : "
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
            <TextView
                android:id="@+id/posisiDosen_statusDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/posisiDosen_textNIP"
                android:layout_toRightOf="@id/posisiDosen_textStatus"
                android:text="Ada di sini"
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/posisiDosen_cardPosisiDosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/posisiDosen_profilDosen"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="2dp"
        >
        <RelativeLayout
            android:id="@+id/posisiDosen_relativeLayoutPosisi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/posisiDosen_textCardPosisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:text="Posisi"
                android:textColor="@color/primary"
                />
            <ImageView
                android:id="@+id/posisiDosen_imageViewPosisi"
                android:layout_below="@id/posisiDosen_textCardPosisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
