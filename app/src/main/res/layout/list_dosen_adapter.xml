<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listDosen_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/listDosen_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/listDosen_profileImage"
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_centerVertical="true"
                tools:src="@tools:sample/avatars"
                app:civ_border_color="@color/md_blue_grey_500"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/listDosen_nama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingRight="10dp"
                android:layout_toEndOf="@id/listDosen_profileImage"
                android:layout_toLeftOf="@id/listDosen_layoutHadir"
                android:layout_toRightOf="@id/listDosen_profileImage"
                android:layout_toStartOf="@id/listDosen_layoutHadir"
                android:gravity="center_vertical"
                tools:text="@tools:sample/full_names"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/listDosen_layoutHadir"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/listDosen_hadir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tidak Hadir"
                    android:background="@drawable/label_tidak_hadir"
                    android:textColor="@color/md_white_1000"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
