<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skripsi.mrizk.findingdosen.main.login.LoginActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/login_layout"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/md_white_1000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/login_judul" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/login_judul"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:id="@+id/login_logo"
        />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/md_white_1000"
        android:hint="Email"
        android:textColorHint="@color/md_grey_100"
        android:textColor="@color/md_white_1000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:drawableTint="@color/md_white_1000"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:nextFocusDown="@id/login_password"
        />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/md_white_1000"
        android:hint="Password"
        android:textColorHint="@color/md_grey_100"
        android:textColor="@color/md_white_1000"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawableTint="@color/md_white_1000"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:imeOptions="actionDone"
        />

    <Button
        android:id="@+id/login_buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/colorAccent"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:focusable="false"/>

    <TextView
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_buttonLogin"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Belum punya akun? Daftar sekarang"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp" />

</RelativeLayout>
